<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSurfaceClick"
            android:text="SurfaceView"
            android:textAllCaps="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onTextureClick"
            android:text="TextureView"
            android:textAllCaps="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onGLSurfaceClick"
            android:text="GLSurfaceView"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/btn_surface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera SurfaceView"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_texture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera TextureView"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/btn_glsurface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera GLSurfaceView"
            android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>